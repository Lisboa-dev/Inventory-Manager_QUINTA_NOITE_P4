model Genero{
    id          Int     @id @default(autoincrement())
    nome        String

    usuario     User @relation("GenerosToUser", fields: [usuarioId], references: [id], onDelete: Cascade)
    usuarioId   Int
    
    fatherId      Int?     
    father       Genero?  @relation("GeneroToGenero", fields: [fatherId], references: [id])
    children    Genero[] @relation("GeneroToGenero")

    lotes Lote[] @relation("LotesToGenre") 

    createdAt DateTime  @default(now())
}